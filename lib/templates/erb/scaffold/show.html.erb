<section class="section">
  <div class="section-header d-mobile-none">
    <h1><%= class_name.constantize.model_name.human %></h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%%= link_to "<%= I18n.t("custom_template.dashboard") %>", root_path %></div>
      <div class="breadcrumb-item"><%%= link_to '<%= class_name.constantize.model_name.human %><%= I18n.t("custom_template.list") %>', <%= plural_table_name %>_path %></div>
      <div class="breadcrumb-item"><%= I18n.t('custom_template.actions.show', resource: class_name.constantize.model_name.human) %></div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4><%= I18n.t('custom_template.actions.show', resource: class_name.constantize.model_name.human) %></h4>
      </div>
      <div class="card-body">
        <dl class="row">
<% attributes.each do |attribute| -%>
          <dt class="col-sm-3"><%= class_name.constantize.human_attribute_name(attribute.name) %>:</dt>
<% if [:date, :datetime].include?(attribute.type) -%>
          <dd class="col-sm-9"><%%= l(@<%= singular_table_name %>.<%= attribute.name %>) %></dd>
<% elsif [:time].include?(attribute.type) -%>
          <dd class="col-sm-9"><%%= l(@<%= singular_table_name %>.<%= attribute.name %>, format: :time) %></dd>
<% elsif [:float, :decimal].include?(attribute.type) -%>
          <dd class="col-sm-9"><%%= np(@<%= singular_table_name %>.<%= attribute.name %>) %></dd>
<% elsif attribute.type == :boolean -%>
          <dd class="col-sm-9"><%%= t(@<%= singular_table_name %>.<%= attribute.name %>) %></dd>
<% else -%>
          <dd class="col-sm-9"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
<% end -%>
<% end -%>
        </dl>
      </div>
    </div>
  </div>
</section>

<%%= link_to icon('fas fa-edit', '<%= I18n.t("custom_template.buttons.edit") %>'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), data: { turbolinks_action: 'replace' }, class: 'btn btn btn-icon icon-left btn-warning' %>
<%%= link_to icon('fas fa-arrow-left', '<%= I18n.t("custom_template.buttons.back") %>'), 'javascript:history.back()', class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<%% content_for(:page_title, '<%= I18n.t('custom_template.actions.show', resource: class_name.constantize.model_name.human) %>') %>
