<%%= bootstrap_form_with(model: <%= model_resource_name %>, data: { controller: 'validation' }) do |form| %>
<% attributes.each do |attribute| -%>
<% if attribute.reference? -%>
    <%%= form.collection_select(:<%= attribute.column_name %>, <%= attribute.name.camelize %>.all, :id, :to_s, {}, data: { controller: 'select' } }) %>
<% elsif attribute.field_type == :check_box -%>
    <%%= form.form_group :<%= attribute.column_name %> do %>
      <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %>, custom: true %>
    <%% end %>
<% elsif %i(date datetime).include?(attribute.type) -%>
    <%%= form.text_field :<%= attribute.column_name %>, value: l(<%= model_resource_name %>.<%= attribute.column_name %>), data: { controller: '<%= attribute.type %>' } %>
<% elsif %i(time).include?(attribute.type) -%>
    <%%= form.text_field :<%= attribute.column_name %>, value: l(<%= model_resource_name %>.<%= attribute.column_name %>, format: :time), data: { controller: 'time' } %>
<% elsif %i(float decimal).include?(attribute.type) -%>
    <%%= form.number_field :<%= attribute.column_name %>, step: :any %>
<% else -%>
    <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %> %>
<% end -%>
<% end -%>
    <%%= form.form_group do %>
      <%%= form.submit class: 'btn btn-primary' %>
    <%% end %>
<%% end %>
