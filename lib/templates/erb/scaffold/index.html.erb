<section class="section">
  <div class="section-header d-mobile-none">
    <h1><%= class_name.constantize.model_name.human %></h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%%= link_to "<%= I18n.t("custom_template.dashboard") %>", root_path %></div>
      <div class="breadcrumb-item"><%= class_name.constantize.model_name.human %><%= I18n.t("custom_template.list") %></div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4><%= class_name.constantize.model_name.human %><%= I18n.t("custom_template.list") %></h4>
        <div class="card-header-action">
          <%%= link_to icon('fas fa-plus', '<%= I18n.t('custom_template.actions.new', resource: class_name.constantize.model_name.human) %>'), new_<%= singular_route_name %>_path, class: 'btn btn-icon icon-left btn-primary' %>
          <%%= render 'shared/card_dropdown' do %>
            <%%= link_to icon('fas fa-download', '<%= I18n.t("custom_template.export") %>'), <%= plural_table_name %>_path(format: :csv, q: request.params[:q]), class: 'dropdown-item has-icon' %>
            <%%= link_to icon('fas fa-print', '<%= I18n.t("custom_template.print") %>'), 'javascript:window.print()', class: 'dropdown-item has-icon' %>
          <%% end %>
        </div>
      </div>
      <div class="card-body">
        <!--
        <#= search_form_for @search, remote: true, data: { controller: 'turbolinks-form' }, html: { class: 'form-row' } do |f| #>
          <div class="form-group col-sm-10">
            <#= f.text_field :name_cont, class: 'form-control m-input m-input--solid', placeholder: 'Name' #>
          </div>
          <div class="form-group col-sm-2 text-right">
            <#= f.button icon('fas fa-search', 'Search'), name: nil, class: 'btn btn-icon icon-left btn-primary' #>
          </div>
        <# end #>
        -->
        <div class="table-responsive">
          <table class="table table-striped table-md">
            <thead>
              <tr>
<% attributes.each do |attribute| -%>
                <th><%%= sort_link_turbo(@search, :<%= attribute.name %>) %></th>
<% end -%>
                <th><%= I18n.t("custom_template.actions.title") %></th>
              </tr>
            </thead>
            <tbody>
              <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                <tr>
<% attributes.each do |attribute| -%>
<% if [:date, :datetime].include?(attribute.type) -%>
                  <td><%%= l(<%= singular_table_name %>.<%= attribute.name %>) %></td>
<% elsif [:time].include?(attribute.type) -%>
                  <td><%%= l(<%= singular_table_name %>.<%= attribute.name %>, format: :time) %></td>
<% elsif [:float, :decimal].include?(attribute.type) -%>
                  <td><%%= np(<%= singular_table_name %>.<%= attribute.name %>) %></td>
<% elsif attribute.type == :boolean -%>
                  <td><%%= t(<%= singular_table_name %>.<%= attribute.name %>) %></td>
<% else -%>
                  <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
<% end -%>
                  <td>
                    <%%= link_to icon('fas fa-eye'), <%= model_resource_name %>, title: '<%= I18n.t("custom_template.buttons.show") %>', class: 'btn btn-icon btn-sm btn-info mr-1' %>
                    <%%= link_to icon('fas fa-edit'), edit_<%= singular_route_name %>_path(<%= singular_table_name %>), title: '<%= I18n.t("custom_template.buttons.edit") %>', class: 'btn btn-icon btn-sm btn-warning mr-1' %>
                    <%%= link_to icon('fas fa-trash'), <%= model_resource_name %>, title: '<%= I18n.t("custom_template.buttons.delete") %>', class: 'btn btn-icon btn-sm btn-danger', method: :delete, data: { confirm: '<%= I18n.t("custom_template.delete_confirm") %>', remote: true } %>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
          <%%== pagy_bootstrap_nav(@pagy) %>
          <%%#= link_to 'Next page', <%= index_helper %>_path(page: @page.next_number, q: request.params[:q]), data: { target: 'infinite-page.more' } unless @page.last? %>
        </div>
      </div>
    </div>
  </div>
</section>

<%% content_for(:page_title, 'List of <%= plural_table_name.titleize %>') %>
